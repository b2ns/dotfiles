### 设置环境变量 ###
# history
export HISTIGNORE='pwd:exit:fg:bg:top:clear:history:ls:uptime:df:cd:ll:la:rm:q:sss:hist'
export HISTCONTROL='ignorespace:ignoredups'
shopt -s histappend
export HISTSIZE=10000

### 设置别名 ###
alias '..'='cd ..'
alias '...'='cd ../..'

# alias rm='rm -i'
alias rm="rm -i"
alias l="ls"
alias la="ls -A"
alias ll="ls -lAh"
alias q='exit'
alias sss='shutdown now'

alias v="nvim"
alias vbig="nvim -n -u NONE -i NONE -N"
alias f='floaterm'
alias e='gedit'
alias c='code'

alias gs="git status"
alias gb="git branch"
alias gd="git diff"
alias gl="git log"
alias ga="git add"
alias gc="git commit"
alias gco="git checkout"
alias gp="git push"
alias gpl="git pull"
alias gcl="git clone"
alias gm="git merge"

### 其他 ###

# bash prompt
green=$'\e[1;32m'
cyan=$'\e[1;36m'
blue=$'\e[1;34m'
purple=$'\e[1;35m'
normal=$'\e[m'
PS1='\[$green\]\u@\[$purple\]\h:\[$blue\]\w\[$cyan\]\[$normal\]\\$ '
