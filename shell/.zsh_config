### 设置别名 ###
# alias rm="rm -i"
alias q="exit"
alias sss="shutdown now"

alias v="gvim"
alias vbig="gvim -n -u NONE -i NONE -N"
alias f="floaterm"
alias e="gedit"
alias c="code"

alias gs="git status"
alias gb="git branch"
alias gd="git diff"
alias gl="git log"
