[+]
bash_task=$HOME/.task.sh

[build]
command=yarn build
command:typescript,typescriptreact,ts,tsx=bash "$(+bash_task)" ts build
command:c,cpp=bash "$(+bash_task)" c build

output=terminal
pos=floaterm
cwd=<root>
save=2

[run]
command=yarn start
command="$(VIM_FILEPATH)"
command:typescript,typescriptreact,ts,tsx=bash "$(+bash_task)" ts run
command:c,cpp=bash "$(+bash_task)" c run

command:javascript,js=node "$(VIM_FILEPATH)"
command:sh=bash "$(VIM_FILEPATH)"
command:python=python "$(VIM_FILEPATH)"

output=terminal
pos=floaterm
cwd=<root>
save=2

[test]
command=yarn test

output=terminal
pos=floaterm
cwd=<root>
save=2
