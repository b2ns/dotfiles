[+]
build_dir=/tmp

[file-build]
command:typescript,ts=tsc "$(VIM_FILEPATH)" --outFile "$(+build_dir)/ts-$(VIM_FILENOEXT)"
command:java=javac "$(VIM_FILENAME)" -d "$(+build_dir)/java-$(VIM_FILENOEXT)"
command:c,cpp=gcc -O2 -Wall "$(VIM_FILEPATH)" -o "$(+build_dir)/c-$(VIM_FILENOEXT)" -lstdc++ -lm -msse3
output=terminal
cwd=<root>
save=2

[file-run]
command="$(VIM_FILEPATH)"
command:javascript,javascript.jsx,jsx=node "$(VIM_FILENAME)"
command:typescript,ts=node "$(+build_dir)/ts-$(VIM_FILENOEXT)"
command:java=java "$(VIM_FILENAME)"
command:c,cpp="$(+build_dir)/c-$(VIM_FILENOEXT)"
command:sh=sh "$(VIM_FILENAME)"
command:python=python "$(VIM_FILENAME)"
command:ruby=ruby "$(VIM_FILENAME)"
output=terminal
cwd=<root>
save=2
