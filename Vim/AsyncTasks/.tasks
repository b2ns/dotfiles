[+]
bash_task=$HOME/.task.sh

[build]
command:java=source "$(+bash_task)" java build
command:typescript,typescriptreact,ts,tsx=source "$(+bash_task)" ts build
command:c,cpp=source "$(+bash_task)" c build

output=terminal
pos=floaterm
cwd=<root>
save=2

[run]
command="$(VIM_FILEPATH)"
command:java=source "$(+bash_task)" java run "$(-rebuild:n)"
command:typescript,typescriptreact,ts,tsx=source "$(+bash_task)" ts run
command:c,cpp=source "$(+bash_task)" c run

command:javascript,js=node "$(VIM_FILEPATH)"
command:sh=source "$(VIM_FILEPATH)"
command:python=python "$(VIM_FILEPATH)"

output=terminal
pos=floaterm
cwd=<root>
save=2

[test]
command:java=source "$(+bash_task)" java test

output=terminal
pos=floaterm
cwd=<root>
save=2
