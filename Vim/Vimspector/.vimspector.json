// ${dollar}- 有值$，可用于输入文字美元
// $$- 真正的美元
// ${workspaceRoot}.vimspector.json-找到的文件夹的路径
// ${workspaceFolder}.vimspector.json-找到的文件夹的路径
// ${gadgetDir}- 操作系统特定小工具目录的路径 ( <vimspector home>/gadgets/<OS>)
// ${file}- 当前打开的文件
// ${relativeFile}- 当前打开的文件相对于workspaceRoot
// ${fileBasename}- 当前打开的文件basename
// ${fileBasenameNoExtension}- 当前打开的文件basename没有文件扩展名
// ${fileDirname}- 当前打开的文件dirname
// ${fileExtname}- 当前已打开的文件的扩展
// ${cwd}- 启动时活动窗口的当前工作目录
// ${unusedLocalPort}- 未使用的本地TCP端口
{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "adapters": {
    "java-debug-server": {
      "name": "vscode-java",
      "port": "${AdapterPort}"
    }
  },
  "configurations": {
    "node": {
      "default": true,
      "adapter": "vscode-node",
      "filetypes": ["javascript", "typescript", "javascriptreact", "typescriptreact", "vue"],
      "breakpoints": {
        "exception": {
          "all": "",
          "uncaught": ""
        }
      },
      "configuration": {
        "request": "launch",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "protocol": "auto",
        "cwd": "${fileDirname}",
        //"cwd": "${CWD:${workspaceRoot\\}}",
        "program": "${file}"
      }
    },
    // "chrome": {
    // "adapter": "chrome",
    // "filetypes": ["javascript", "typescript", "javascriptreact", "typescriptreact", "vue"],
    // "configuration": {
    // "request": "launch",
    // "url": "http://127.0.0.1:8080",
    // "webRoot": "${fileDirname}"
    // }
    // }
    "Java Attach": {
      "default": true,
      "adapter": "java-debug-server",
      "filetypes": ["java"],
      "breakpoints": {
        "exception": {
          "caught": "",
          "uncaught": ""
        }
      },
      "configuration": {
        "request": "attach",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "host": "127.0.0.1",
        "port": "5005"
      }
    }
  }
}
